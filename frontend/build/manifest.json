{
  "name": "Surge",
  "version": "1.0.0",
  "description": "Meeting Bot",
  "manifest_version": 3,
  "author": "Sidharth Babu",
  "icons": {
    "16": "./logo-1.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "The Meeting Bot"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.clerk.dev/*",
    "https://*.your-backend-domain.com/*"
  ]
}
